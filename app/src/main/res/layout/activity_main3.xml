<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:stretchColumns="*"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TableRow android:weightSum="5">
        <TextView
            android:layout_weight="5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PURCHASE"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:weightSum="5">
        <ImageView
            android:id="@+id/buy_image"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/shoes1" />

        <TableLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:id="@+id/buy_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Adidas Superstar"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/buy_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$220"
                    android:textColor="@color/red"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/how_many"
                    android:text="외 1건"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="20dp"/>
            </TableRow>
        </TableLayout>
    </TableRow>


    <TableRow
        android:padding="30dp">
        <TextView
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Total Price : "
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginStart="100dp"
            android:text="$"
            android:textColor="@color/red"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalPrice"
            android:paddingEnd="20dp"
            android:layout_width="75dp"
            android:layout_gravity="center_vertical|right"
            android:text="200"
            android:textColor="@color/red"
            android:textSize="25dp"
            android:textStyle="bold" />
    </TableRow>



    <TableRow android:layout_marginTop="70dp">
        <TextView
            android:layout_marginStart="20dp"
            android:text="USER INFORMATION"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow android:weightSum="5" android:layout_marginEnd="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Address"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_address"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_margin="10dp" />
    </TableRow>
    <TableRow android:weightSum="5" android:layout_marginEnd="20dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edittext_contact"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_margin="10dp" />
    </TableRow>
    <TableRow android:weightSum="5" android:gravity="center">
        <Button
            android:id="@+id/btn_buynow3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_radius"
            android:text="Buy now"
            android:textColor="@color/white"/>
    </TableRow>

</TableLayout>